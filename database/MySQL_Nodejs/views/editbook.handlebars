
<div class="container">

    <form action="/books/updatebook" method="POST" class="form">

        <h3 class="title-main">Edição</h3>

        <div class="books-container">
            

            <input type="hidden" name="id" value="{{book.id}}" class="input"> 

            <label for="title" class="title-input">Title</label> <br>
            <input type="text" name="title" placeholder="Digite o Titulo" value="{{book.title}}" class="input"> <br>

            <label for="pages" class="title-input">Pages</label> <br>
            <input type="text" name="pages" placeholder="Digite quantas paginas tem?" value="{{book.pages}}" class="input"> <br>

            <div class="button-area">
                <div class="button">
                    <input type="submit" value="Editar" class="btn">
                </div> 
            </div>
                   
        </div>
            
    </form>

</div>

